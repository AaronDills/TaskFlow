APP_NAME=TaskFlow
APP_ENV=local
APP_KEY=
# IMPORTANT: Set APP_DEBUG=false in production!
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
# IMPORTANT: Set LOG_LEVEL=error in production!
LOG_LEVEL=debug

# Database Configuration
# For production, use MySQL or PostgreSQL instead of SQLite
DB_CONNECTION=sqlite
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=taskflow
# DB_USERNAME=root
# DB_PASSWORD=

# Session Configuration
# IMPORTANT: Set SESSION_ENCRYPT=true in production!
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
# Configure for your mail provider in production
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# ===========================================
# PRODUCTION CHECKLIST
# ===========================================
# Before deploying to production, ensure:
# 1. APP_DEBUG=false
# 2. LOG_LEVEL=error
# 3. SESSION_ENCRYPT=true
# 4. APP_KEY is regenerated (php artisan key:generate)
# 5. DB_CONNECTION uses MySQL or PostgreSQL
# 6. MAIL_MAILER is configured for real email sending
# 7. Run: php artisan migrate --force
# 8. Run: php artisan config:cache
# 9. Run: php artisan route:cache
# 10. Run: php artisan view:cache
# ===========================================
